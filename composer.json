{
    "name": "fsi/datagrid",
    "type": "library",
    "description": "FSi DataGrid Component",
    "keywords": ["fsi", "component", "datagrid"],
    "license": "MIT",
    "authors": [
        {
            "name": "Norbert Orzechowicz",
            "email": "norbert@orzechowicz.pl"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/event-dispatcher" : "~2.2",
        "symfony/property-access": "~2.2",
        "symfony/options-resolver": "~2.2",
        "fsi/reflection" : "0.9.*",
        "fsi/data-indexer" : "0.9.*"
    },
    "require-dev": {
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/common": "~2.2,>=2.2.3",
        "gedmo/doctrine-extensions": "2.3.*",
        "symfony/form" : "~2.2",
        "symfony/routing" : "~2.2",
        "symfony/http-foundation": "~2.2",
        "symfony/dependency-injection" : "~2.2",
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "FSi\\Component\\DataGrid": "lib/",
            "FSi\\Component\\DataGrid\\Tests": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    }
}
